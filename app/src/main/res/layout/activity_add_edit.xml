<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".AddEditActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THÊM LỚP MỚI"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="#1976D2"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtMaLop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:hint="Mã lớp (VD: K59-CNTT)" />

    <EditText
        android:id="@+id/edtTenLop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"        android:inputType="text"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:hint="Tên lớp đầy đủ" />
    <EditText
        android:id="@+id/edtNienKhoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"        android:inputType="text"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:hint="Niên khóa (VD: 2024-2028)" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Thuộc Ngành:"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spnNganh"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginBottom="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:backgroundTint="#757575"
            android:layout_marginEnd="12dp"/>

        <Button
            android:id="@+id/btnLuu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:backgroundTint="#1976D2"/>
    </LinearLayout>
</LinearLayout>